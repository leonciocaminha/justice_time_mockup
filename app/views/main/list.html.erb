
<section id="content">
  <div class="container animated fadeInUpBig">
    <div class="tile">
      <div class="tile-body">
        <table id="grid-basic" class="table table-condensed table-hover table-striped">
          <thead>
            <tr>
              <th data-width="11%" data-column-id="number" data-type="numeric">Processo</th>
              <th data-width="11%" data-column-id="court" data-type="numeric">Vara do Júri</th>
              <th data-width="11%" data-column-id="macro" data-type="numeric">Macro Fase</th>
              <th data-width="18%" data-column-id="macro_period">Período na Macro Fase</th>
              <th data-column-id="phase">Fase Processual</th>
              <th data-column-id="phase_period">Período Fase Processual</th>
              <th class="text-center">Tempo Acumulado</th>
              <th class="text-center">Macro Fase</th>
              <th class="text-center">Fase Processual</th>
              <th>Monitorado?</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @procedures.each do |procedure| %>
              <tr>
                <td>
                  <%= procedure.number %>
                </td>
                <td>
                  <%= procedure.court %>
                </td>
                <td>
                  <%= procedure.macro %>
                </td>
                <td>
                  <%= diff_days(procedure.macro_period) %>
                </td>
                <td>
                  <%= procedure.phase %>
                </td>
                <td>
                  <%= diff_days(procedure.phase_period) %>
                </td>
                <td class="text-center">
                  <%= rand_indicator %>
                </td>
                <td class="text-center">
                  <%= rand_indicator %>
                </td>
                <td class="text-center">
                  <%= rand_indicator %>
                </td>
                <td class="text-center">
                  <%= check_box_tag "monitored", true, procedure.monitored %>
                </td>


                <td>
                  <div class="btn-group">
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                      <i class="fa fa-ellipsis-h"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-right" data-placement="left" role="menu">
                      <li>
                        <a class="detail-actions" data-link="/action_plans/27" href="#">
                          <%= fa_icon("eye") %>
                          Ver Processo
                        </a>
                      </li>
                      <li>
                        <a class="detail-actions" data-link="/action_plans/27" href="#">
                          <%= fa_icon("area-chart") %>
                          Gráfico do Tempo
                        </a>
                      </li>
                      <li>
                        <a class="detail-actions" data-toggle="modal" href="#modalWider">
                          <%= fa_icon("map") %>
                          Mapa do Processo
                        </a>
                      </li>
                    </ul>
                  </div>
                </td>


              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="text-center">
        <%= paginate @procedures %>
      </div>
    </div>
  </div>
</section>

<%= render partial: "main/partials/modal_procedure" %>
